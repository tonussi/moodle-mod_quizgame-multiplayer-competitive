{{!
    @template mod_quizgame/index_page

    Starting point for an awesome template.
    This is how much I hate moodle_template

}}

<div ng-app="tforms">
  <div ng-controller="FormKeyController as fkc">

    <form class="form-horizontal">
    <fieldset>

    <!-- Form Name -->
    <legend>{{newkey}}</legend>

    <h3>{{selectcfg}}</h3>

    <!-- Select Basic -->
    <div class="form-group">
      <label for="selectbasic">{{configname}}</label>
      <div class="col-md-2">
        <select id="selectbasic" name="selectbasic" class="form-control" ng-model="cfgid" required>
          {{#configids}}
          <option value="{{id}}">Name: {{name}} Time: {{time}}</option>
          {{/configids}}
        </select>
      </div>
    </div>

    <h3>{{generatekey}}</h3>

    <label>{{randomnumber}}</label>

    <input type="number" name="input" ng-model="size" min="15" max="50" required>

    <div class="form-group">
      <label for="button1id">{{options}}</label>
      <div class="col-md-8">
         <div id="messages" class="alert alert-success" data-ng-show="messages.response" data-ng-bind="messages.response"></div>
      </div>
      <div class="col-md-8">
          <button id="button1id" name="button1id" ng-click="fkc.send(size, cfgid)" class="btn btn-success">Generate</button>
          <a ng-href="{{wwwroot}}views/teacher.php?id={{quizgame}}" class="btn btn-info">Go Back to Teacher's Page</a>
      </div>
    </div>

    </fieldset>
    </form>

  </div>
</div>
