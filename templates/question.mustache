{{!
    @template mod_quizgame/index_page

    Starting point for an awesome template.
    This is how much I hate moodle_template

}}

<div ng-app="tforms">
  <div ng-controller="FormQuestionController as fqc">

    <form class="form-horizontal">
    <fieldset>

    <!-- Form Name -->
    <legend>{{questionbuilder}}</legend>

    <label for="selectbasic">{{selectcategory}}</label>

    <div class="col-md-2">
      <select id="selectbasic" name="selectbasic" class="form-control" ng-model="catid" required>
        {{#categories}}
          <option value="{{id}}">ID: {{id}} Nome: {{name}}</option>
        {{/categories}}
      </select>
    </div>

    <h3>{{questionname}}</h3>

    <!-- Textarea -->
    <div class="form-group">
      <label for="textarea">{{qnametext}}</label>
      <div class="col-md-4">
        <textarea class="form-control"
                  id="textarea" name="textarea"
                  ng-model="qname" required></textarea>
      </div>
    </div>

    <h3>{{addquestiontext}}</h3>

    <!-- Textarea -->
    <div class="form-group">
      <label for="textarea">{{qtextdescr}}</label>
      <div class="col-md-4">
        <textarea class="form-control"
                  id="textarea" name="textarea"
                  ng-model="qtext" required></textarea>
      </div>
    </div>

    <h3>{{qanswer}} #1</h3>

    <!-- Textarea -->
    <div class="form-group">
      <div class="col-md-4">
        <textarea class="form-control"
                  id="textarea" name="textarea"
                  ng-model="answer1" required></textarea>
      </div>
    </div>
    <input type="number" step="100" ng-model="fraction1" min="0" max="100" required/>

    <h3>{{qanswer}} #2</h3>

    <!-- Textarea -->
    <div class="form-group">
      <div class="col-md-4">
        <textarea class="form-control"
                  id="textarea" name="textarea"
                  ng-model="answer2" required></textarea>
      </div>
    </div>
    <input type="number" step="100" ng-model="fraction2" min="0" max="100" required/>

    <h3>{{qanswer}} #3</h3>

    <!-- Textarea -->
    <div class="form-group">
      <div class="col-md-4">
        <textarea class="form-control"
                  id="textarea" name="textarea"
                  ng-model="answer3" required></textarea>
      </div>
    </div>
    <input type="number" step="100" ng-model="fraction3" min="0" max="100" required/>

    <h3>{{qanswer}} #4</h3>

    <!-- Textarea -->
    <div class="form-group">
      <div class="col-md-4">
        <textarea class="form-control"
                  id="textarea" name="textarea"
                  ng-model="answer4" required></textarea>
      </div>
    </div>
    <input type="number" step="100" ng-model="fraction4" min="0" max="100" required/>

    <h3>{{savequestion}}</h3>

    <div class="form-group">
      <label for="button1id">{{options}}</label>
      <div class="col-md-8">
         <div id="messages" class="alert alert-success" data-ng-show="messages.response" data-ng-bind="messages.response"></div>
      </div>
      <div class="col-md-8">
        <button id="button1id" name="button1id" ng-click="fqc.send(catid, qname, qtext, answer1, answer2, answer3, answer4, fraction1, fraction2, fraction3, fraction4)" class="btn btn-success">Ok</button>
        <a ng-href="{{wwwroot}}views/teacher.php?id={{quizgame}}" class="btn btn-info">Go Back to Teacher's Page</a>
      </div>
    </div>

    </fieldset>
    </form>

  </div>
</div>
